<div class="footer">
    <div class="DialogueBox">
        <input type="text" class="form-control" spellcheck="true" @onkeypress="@OnKeyPress" @bind-value:event="oninput" @bind-value="@Engine.CurrentDialogue">
    </div>
    <button type="button" class="btn btn-primary LeftButton">@Engine.Language.Back</button>
    <button type="button" class="btn btn-primary RightButton">@Engine.Language.Next</button>
</div>

@code {
    private async Task OnKeyPress(KeyboardEventArgs Args) {
        if (Args.Code == "Enter")
            await Engine.UpdateDialogue();
    }

    public void Refresh() => this.StateHasChanged();
}
