<div id="ListBox">
    <ol>
        @for (int i = 0; i < Items?.Length; i++) {
            <ListBoxItem Checked="@Items[i].Checked" Value="@Items[i].Value" Selected="i == SelectedIndex" ID="i"/>
        }
    </ol>
</div>

@code {

    public Sermone.Types.ListBoxItemInfo[] Items { get; set; }

    public int SelectedIndex = 0;

    public void SetItems(Sermone.Types.ListBoxItemInfo[] Items) => this.Items = Items;

    public void Refresh() => this.StateHasChanged();
}
