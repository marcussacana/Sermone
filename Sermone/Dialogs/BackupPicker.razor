<h3>Backups</h3>
@if (Engine.Pastes == null)
{
    <div class="d-flex justify-content-center">
        <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">@Engine.Loading</span>
        </div>
    </div>
}
else
{
    <table class="table table-striped table-condensed table-hover">
        <tbody>
            @foreach (var Backup in Engine.Pastes)
            {
                var ThisBackup = Backup;
                <tr @onclick="@(() => OnBackupClicked(ThisBackup.Key))">
                    <td class="align-baseline align-middle">
                        <a href="#" class="table-item">@ThisBackup.Value</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

